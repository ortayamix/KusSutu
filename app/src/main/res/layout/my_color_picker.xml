<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:id="@+id/rel_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="?attr/actionBarSize"
        >

        <TextView
            android:id="@+id/txt_ana_renk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renk"
            android:textStyle="bold"
            />

        <com.larswerkman.holocolorpicker.ColorPicker
            android:id="@+id/picker"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt_parlak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parlaklık"
            android:layout_below="@+id/picker"
            android:textStyle="bold"
            />

        <com.larswerkman.holocolorpicker.SVBar
            android:id="@+id/svbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_parlak"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt_saydam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saydamlık"
            android:layout_below="@+id/svbar"
            android:textStyle="bold"
            />

        <com.larswerkman.holocolorpicker.OpacityBar
            android:id="@+id/opacitybar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_saydam"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</ScrollView>
