<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_my"
    android:id="@+id/const_screen"
    tools:context=".Kus_Sutu_display">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/const_kussutu" >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp" />

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_pager"
            android:elevation="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="italic"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="36sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:text="\nAhmed İhsan Genç" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="#66222f3e"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <!--
        android:src="@drawable/b29" -->

        <ImageView
            android:id="@+id/im_popup_like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_favorite_red_24"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/im_btn_list_arama_fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_baseline_format_quote_36_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/im_btn_share_display"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_baseline_share_36"
            app:layout_constraintStart_toEndOf="@+id/im_btn_list_arama_fav"
            app:layout_constraintEnd_toStartOf="@+id/im_btn_tefeul_display"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/im_btn_tefeul_display"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_baseline_auto_awesome_36"
            app:layout_constraintStart_toEndOf="@+id/im_btn_share_display"
            app:layout_constraintEnd_toStartOf="@+id/im_btn_fav_display"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/im_btn_fav_display"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_baseline_favorite_red_border_36"
            app:layout_constraintStart_toEndOf="@+id/im_btn_tefeul_display"
            app:layout_constraintEnd_toStartOf="@+id/im_btn_backgr"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/im_btn_fav_archieve"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_favorite_archieve_36"
            app:layout_constraintStart_toEndOf="@+id/im_btn_tefeul_display"
            app:layout_constraintEnd_toStartOf="@+id/im_btn_backgr"
            app:layout_constraintBottom_toTopOf="@+id/im_btn_fav_display" />

        <ImageButton
            android:id="@+id/im_btn_backgr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_baseline_palette_36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <RelativeLayout
            android:id="@+id/rel_bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:elevation="30dp"
            android:background="#9919485a"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/logo_small"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@mipmap/ic_launcher_kusst" />

            <TextView
                android:id="@+id/txt_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/logo_small"
                android:text="Kuş Sütü"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_page_nmbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/roundcorner_sayi_tv"
                android:elevation="15dp"
                android:paddingStart="7dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:paddingBottom="3dp"
                android:text="152"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Ahmed İhsan GENÇ"
                android:textColor="@color/white"
                android:textSize="14sp"
                />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="invisible"
        android:id="@+id/const_share"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="35dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/roundcorner_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageButton
            android:id="@+id/im_btnClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageButton
            android:id="@+id/im_btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_baseline_palette_36"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_btnClose"
            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/txInptLayShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:textColorHint="@color/colorBLue_my"
            app:boxStrokeColor="@color/colorBLue_my"
            app:boxStrokeWidthFocused="0.5dp"
            app:boxStrokeWidth="2dp"
            android:hint="Paylaşma Seçenekleri"
            app:layout_constraintStart_toEndOf="@+id/im_btnSetting"
            app:layout_constraintEnd_toStartOf="@+id/im_btnShare"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTVShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="@color/white"
                android:text="Tam Ekran (bu cihaz için)"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/im_btnShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:elevation="10dp"
            android:src="@drawable/icons_telegram_36"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ViewStub
        android:id="@+id/stub_display"
        android:inflatedId="@+id/stub_Tree"
        android:layout="@layout/display_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:elevation="35dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>