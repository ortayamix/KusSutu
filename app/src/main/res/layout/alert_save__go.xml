<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_go_saved"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary_my"
        android:text="Son Kaydedilen"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/ed_sayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gidilecek söz no"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_go_saved" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_ayrac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:background="@drawable/roundedbutton"
        app:layout_constraintTop_toBottomOf="@+id/ed_sayfa"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageButton
            android:id="@+id/im_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="false"
            android:src="@drawable/ic_baseline_bookmark_border_36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tx_bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AYRAÇ"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/im_bookmark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>




    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAZGEÇ"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_go"
        app:layout_constraintTop_toBottomOf="@+id/ed_sayfa" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="GİT"
        android:backgroundTint="@color/colorPrimary_my"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_sayfa" />



</androidx.constraintlayout.widget.ConstraintLayout>