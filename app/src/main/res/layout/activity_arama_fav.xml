<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arama_Fav_Activity">

    <LinearLayout
        android:id="@+id/lin_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9919485a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/im_btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_left_24" />

        <SearchView
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:queryHint="Arama yapın.."
            android:focusable="false"
            android:layout_gravity="center"
            android:iconifiedByDefault="true"
             >
            <!--
            android:focusable="false"
            android:iconifiedByDefault="false"
            -->

            <requestFocus />
        </SearchView>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/im_quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_format_quote_24" />

        <ImageButton
            android:id="@+id/im_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_favorite_red_border_24" />

        <ImageButton
            android:id="@+id/im_tfl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_auto_awesome_24" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/im_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="16dp"
            android:src="@drawable/ic_menu_notifications_24" />

        <!--
            android:src="@drawable/ic_baseline_settings_24_black"
        -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@+id/lin_search">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RV_quotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize"
            android:saveEnabled="true"
            android:scrollbars="vertical" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/fab_go_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:background="@null"
        android:layout_margin="35dp"
        android:src="@drawable/im_btn_floating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_fav_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Favori listen boş!\nListeye göz at"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fav_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keşfet"
        android:backgroundTint="@color/colorPrimary_my"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fav_empty" />

</androidx.constraintlayout.widget.ConstraintLayout>