<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Hakkimizda">

        <ImageView
            android:id="@+id/tv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@null"
            android:src="@drawable/logo"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bu uygulama İhsan Eğitim Kültür ve Yardımlaşma Vakfı tarafından yapılmıştır. Yararlı olması dileğiyle..\n(detaylı okumak için tıklayınız)"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_logo"
            app:layout_constraintBottom_toTopOf="@+id/const_contact"
            />

        <!--
            android:text="Bu uygulama İhsan Eğitim Kültür ve Yardımlaşma Vakfı tarafından yapılmıştır. Yararlı olması dileğiyle.."
        -->

        <View
            android:id="@+id/sep0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary_my"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_us"
            app:layout_constraintBottom_toTopOf="@+id/const_contact"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/sep0"
            >

            <ImageView
                android:id="@+id/img_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_contact_phone_24"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bize ulaşın"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_contact"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary_my"
            app:layout_constraintTop_toBottomOf="@+id/const_contact"
            app:layout_constraintBottom_toTopOf="@+id/const_website"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/sep1"
            >

            <ImageView
                android:id="@+id/img_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_link_24"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ahmedihsan.com ziyaret edin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_website"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sep11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary_my"
            app:layout_constraintTop_toBottomOf="@+id/const_website"
            app:layout_constraintBottom_toTopOf="@+id/const_website2"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_website2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/sep11"
            >

            <ImageView
                android:id="@+id/img_website2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_link_24"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="refrefdergisi.com ziyaret edin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_website2"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sep2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary_my"
            app:layout_constraintTop_toBottomOf="@+id/const_website2"
            app:layout_constraintBottom_toTopOf="@+id/const_rate_us"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_rate_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/sep2"
            >

            <ImageView
                android:id="@+id/img_rate_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_star_rate_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Play Store'da puan ver"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_rate_us"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/sep3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary_my"
            app:layout_constraintTop_toBottomOf="@+id/const_rate_us"
            app:layout_constraintBottom_toTopOf="@+id/tv_version"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versiyon 1.32"
            android:padding="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/sep3"
            app:layout_constraintBottom_toTopOf="@+id/sep4" />

        <View
            android:id="@+id/sep4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary_my"
            app:layout_constraintTop_toBottomOf="@+id/const_rate_us"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

