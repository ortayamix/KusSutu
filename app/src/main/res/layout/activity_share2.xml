    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/txInptLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:hint="Paylaşma Seçenekleri"
        app:startIconDrawable="@drawable/dropd_whatsapp_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:text="Whatsapp TamEkran"/>

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rel_share_1"
        android:layout_width="270dp"
        android:layout_height="480dp"
        app:layout_constraintTop_toBottomOf="@+id/txInptLay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <ViewStub
            android:visibility="visible"
            android:id="@+id/layout_stub1"
            android:inflatedId="@+id/activity1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ViewStub
            android:visibility="visible"
            android:id="@+id/layout_stub2"
            android:inflatedId="@+id/activity2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/im_btn_share_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:elevation="10dp"
        android:src="@drawable/icon_telegram_50"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

